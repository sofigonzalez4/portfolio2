---
const { name, position, aboutMe, linkedin, github, cvLink, profileImage, projects } = Astro.props;
import '../styles/card.css';
---

<div class="container">
    <div class="card-container">
        <div class="descripcion">
            <h1>{name}</h1>
            <h2>{position}</h2>
            <p>{aboutMe}</p>
            <div class="icons">
                <a href={github} class="hover-text" target="_blank">
                    <span class="tooltip-text" id="fade">GitHub</span>
                    <i class="bi bi-github"></i>
                </a>
                <a href={cvLink} class="hover-text" target="_blank">
                    <span class="tooltip-text" id="fade">CV</span>
                    <i class="bi bi-file-earmark-arrow-down"></i>
                </a>
                <a href="#proyectos" class="hover-text"> <!-- Enlace a la sección de proyectos -->
                    <span class="tooltip-text" id="fade">Proyectos</span>
                    <i class="bi bi-briefcase"></i>
                </a>
            </div>
        </div>
        <div class="image">
            <img src={"public/images/perfil.jpeg"} alt="Perfil">
        </div>
    </div>

    <h3 id="proyectos">Proyectos</h3> <!-- Añadir un id aquí para el enlace -->
    <div class="projects">
        {projects.map(project => (
            <div class="project-item" key={project.title}>
                <h4>{project.title}</h4>
                <p>{project.description}</p>
                <a href={project.link} target="_blank">Ver Proyecto</a>
            </div>
        ))}
    </div>
</div>


